{
    "tabWidth": 4,
    "printWidth": 80,
    "proseWrap": "always",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "singleAttributePerLine": true,
    "semi": true,
    "plugins": ["@ianvs/prettier-plugin-sort-imports"],
    "importOrder": [
        "^(react/(.*)$)|^(react$)",
        "^(next/(.*)$)|^(next$)",
        "<THIRD_PARTY_MODULES>",
        "",
        "^[./]"
    ],
    "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"]
}
